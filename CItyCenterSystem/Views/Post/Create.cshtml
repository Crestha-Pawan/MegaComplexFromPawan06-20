@model Payroll.Src.Dto.PostDto
@{
    Layout = null;
    ViewBag.Title = "Create";
}

<form asp-action="Create" asp-controller="Post" method="post" id="messageModal" class="frmValidation" novalidate>
    @Html.AntiForgeryToken()
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">New Post</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>
        <div class="modal-body">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-12">
                        <label for="Name">Name<span style="color:red">*</span></label><br />
                        <input type="text" asp-for="Name" class="form-control" id="Name"  required autocomplete="off" />
                        <div class="invalid-feedback">
                            Please Enter A Name.
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" id="btnSubmit" class="btn  btn-success"><i class="ti-check"></i> Submit</button>
            <button type="button" class="btn  btn-secondary" data-dismiss="modal">&times; Cancel</button>
        </div>
    </div>
</form>

<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script type="text/javascript">
    $(function () {
        Array.prototype.filter.call($('.frmValidation'), function (form) {
            $('#btnSubmit').click(function () {
                if (form.checkValidity() === false) {
                    event.preventDefault();
                    event.stopPropagation();
                    form.classList.add('was-validated');
                    return false;
                }
                else {
                    return true;
                }


            });
        });
    });
</script>
